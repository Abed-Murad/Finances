<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    app:cardCornerRadius="@dimen/cornerRadius"
    app:cardElevation="@dimen/cardViewElevation">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitleTextView"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/dashboard_recent_transactions_subtitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleTextView"
        android:layout_marginTop="12dp"
        tools:itemCount="3"
        tools:listitem="@layout/cell_dashboard_transaction" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showMoreButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/dashboard_recent_transactions_show_more"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"
        app:cornerRadius="@dimen/cornerRadius"
        app:rippleColor="?colorControlHighlight" />

</RelativeLayout>